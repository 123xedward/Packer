{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-east-1",
        "source_ami": "ami-0de53d8956e8dcf80",
        "instance_type": "t2.large",
        "ssh_username": "ec2-user",
        "ami_name": "AMI-Metadata-{{isotime | clean_ami_name}}",
        "ami_description": "EC2 AMI with Ansible",
        "tags": {
          "role": "web_Server"
        },
        "run_tags": {
          "role": "Index_Metadata"
        }
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "script": "provision.sh"
      },
      {
        "type": "ansible-local",
        "playbook_file": "playbook.yaml",
        "role_paths": [
            "roles/metadataAWS/"
        ]
      }
    ]
  }
  